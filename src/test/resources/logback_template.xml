<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <Appender name="httpappender" class="com.splunk.logging.HttpLogbackAppender">
        <url>%scheme%://%host%:%port%/services/receivers/token</url>
        <token>%user_defined_httpinput_token%</token>
        <source>splunktest_accept</source>
        <sourcetype>battlecat_test</sourcetype>
        <disableCertificateValidation>true</disableCertificateValidation>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%msg</pattern>
        </layout>
    </Appender>

    <logger name ="splunkLogback" level="INFO">
        <appender-ref ref="httpappender" />
    </logger>

</configuration>
